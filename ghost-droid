if [[ "$?" != 0 ]]
 then
    echo -e $ye " [-] Internet:${re} FAILED"
    echo ""
    echo -e $lgf " This Script Needs An Active Internet Connection"
    echo ""
    echo -e $ye "               Ghost-Droid Exit" 
    echo "." | lolcat
    sleep 2
    exit
  else
    echo -e $ye " [√] Internet:${lg} CONNECTED"
    sleep 2
  fi

}

