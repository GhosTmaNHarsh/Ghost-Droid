function returu(){

echo -e $cy "   +------------[ ${ye}Ghost-Droid${cy} ]-------------+"
echo -e $cy "   | ${pu}[${re}1${pu}] ${ye}Main-menu                          ${cy}|"
echo -e $cy "   | ${pu}[${re}2${pu}] ${ye}Exit                               ${cy}|"
echo -e $cy "   +----------------------------------------+"
echo -n -e $cy "Ghost:>${ye} "
read f
case $f in
      1) main_menu
      ;;
      2) exip
      ;;
      *) clear 
         echo " [-] Invalid Input "
         returu
      ;;
esac

}

function menu(){

